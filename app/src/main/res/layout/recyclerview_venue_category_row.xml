<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_venue_category"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="3dp"
        android:elevation="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_venue_category"
            android:orientation="vertical"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_venue_category"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_clothing_store"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/text_venue_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primary_dark"
                android:textStyle="bold"
                android:text="Shopping"
                />

            <TextView
                android:id="@+id/text_category_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_not_choose"
                android:textColor="@color/colorSecondaryText"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>