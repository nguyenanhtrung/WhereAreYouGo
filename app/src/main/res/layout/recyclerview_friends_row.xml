<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:boom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_friend"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image_friend"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                card_view:cardCornerRadius="3dp"
                android:src="@drawable/ic_user_default"
                />

            <TextView
                android:id="@+id/text_friend_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nguyen Anh Trung"
                android:gravity="center_horizontal"
                style="@style/TextFriendName"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_friend_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_offline"
                />

            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/boom_button_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:bmb_piecePlaceEnum="piecePlace_dot_6_1"
                app:bmb_buttonPlaceEnum="buttonPlace_sc_6_1"
                android:layout_marginEnd="8dp"
                app:bmb_inList="true"
                android:layout_marginBottom="8dp"
                android:layout_gravity="end"
                app:bmb_buttonRadius="12dp"
                app:bmb_buttonEnum="textOutsideCircle"
                />



        </LinearLayout>
        


    </android.support.v7.widget.CardView>



