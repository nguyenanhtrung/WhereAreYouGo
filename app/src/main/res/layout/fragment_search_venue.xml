<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <TextView
    android:id="@+id/text_label_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="@string/label_venue_name"
    style="@style/TextLabel"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    />

  <com.rengwuxian.materialedittext.MaterialEditText
    android:id="@+id/edit_text_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="@string/hint_search_venue_name"
    style="@style/EditTextSearch"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/text_label_name"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_bias="1.0" />

<TextView
  android:id="@+id/text_label_area"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="@string/text_label_area"
  style="@style/TextLabel"
  app:layout_constraintLeft_toLeftOf="parent"
  app:layout_constraintRight_toRightOf="parent"
  android:layout_marginTop="8dp"
  app:layout_constraintTop_toBottomOf="@+id/edit_text_name"
  app:layout_constraintHorizontal_bias="0.5"
  />

  <RadioGroup
    android:id="@+id/radio_button_group"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintTop_toBottomOf="@id/text_label_area"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintRight_toRightOf="parent">

    <RadioButton
      android:id="@+id/button_closest"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:text="@string/radio_button_closest"
      style="@style/RadioButtonClosest"
      />

    <RadioButton
      android:id="@+id/button_close"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:text="@string/radio_button_closer"
      style="@style/RadioButtonClose"
      />

    <RadioButton
      android:id="@+id/button_city"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"

      android:text="@string/button_city"
      style="@style/RadioButtonCity"
      />


  </RadioGroup>

  <TextView
    android:id="@+id/text_label_radius"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/text_radius"
    style="@style/TextLabel"
    android:layout_marginTop="24dp"
    app:layout_constraintTop_toBottomOf="@+id/radio_button_group"
    android:layout_marginStart="70dp"
    android:layout_marginLeft="70dp"
    app:layout_constraintLeft_toLeftOf="parent" />

  <com.rengwuxian.materialedittext.MaterialEditText
    android:id="@+id/edit_text_radius"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="@string/text_hint_radius"
    style="@style/EditTextSearch"
    app:layout_constraintBaseline_toBaselineOf="@+id/text_label_radius"
    app:layout_constraintLeft_toRightOf="@+id/text_label_radius"
    android:layout_marginLeft="29dp"
    android:layout_marginStart="29dp"
    />
  <TextView
    android:id="@+id/text_label_city"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="70dp"
    android:text="@string/text_label_city"
    android:layout_marginTop="19dp"
    app:layout_constraintTop_toBottomOf="@+id/edit_text_radius"
    android:layout_marginLeft="70dp"
    app:layout_constraintLeft_toLeftOf="parent" />

  <com.rengwuxian.materialedittext.MaterialEditText
    android:id="@+id/edit_text_city"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="@string/text_hint_city"
    style="@style/EditTextSearch"
    app:layout_constraintLeft_toRightOf="@+id/text_label_city"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    app:layout_constraintBaseline_toBaselineOf="@+id/text_label_city" />

  <View
    android:id="@+id/divider_area"
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:background="@color/colorAccent"
    android:layout_marginTop="24dp"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    app:layout_constraintTop_toBottomOf="@id/text_label_city"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintRight_toRightOf="parent" />
  <TextView
    android:id="@+id/text_label_category"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/label_category_place"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    android:layout_marginTop="16dp"
    style="@style/TextLabel"
    app:layout_constraintTop_toBottomOf="@+id/divider_area"
    />

  <com.marshalchen.ultimaterecyclerview.UltimateRecyclerView
    android:id="@+id/recycler_view_categories"
    android:layout_width="0dp"
    android:layout_marginStart="16dp"
    android:layout_height="@dimen/height_recycler_view_categories"
    android:scrollbars="horizontal"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@id/text_label_category"
    android:layout_marginRight="16p"
    android:layout_marginEnd="16dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="16dp"
    app:layout_constraintLeft_toLeftOf="parent" />

  <com.beardedhen.androidbootstrap.BootstrapButton
    android:id="@+id/button_search"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/button_search"
    style="@style/Button"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="16dp"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintTop_toBottomOf="@+id/recycler_view_categories" />



</android.support.constraint.ConstraintLayout>