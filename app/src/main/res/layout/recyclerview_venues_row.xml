<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/image_venue_category"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="@string/contentDescriptor"
    android:src="@drawable/ic_food"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp" />

  <TextView
    android:id="@+id/text_venue_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Highland Coffee"
    style="@style/TextVenueName"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintLeft_toRightOf="@+id/image_venue_category"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    />

  <TextView
    android:id="@+id/text_venue_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="5 Ho Guom Plaza"
    android:layout_marginTop="14dp"
    app:layout_constraintTop_toBottomOf="@+id/text_venue_name"
    app:layout_constraintLeft_toRightOf="@+id/image_venue_category"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    style="@style/TextVenueAddress"
    />

  <TextView
    android:id="@+id/text_venue_distance"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cach ban 6.5km"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="27dp"
    android:layout_marginStart="200dp"
    style="@style/TextVenueDistance"
    app:layout_constraintLeft_toRightOf="@+id/image_venue_category"
    android:layout_marginLeft="200dp" />

</android.support.constraint.ConstraintLayout>