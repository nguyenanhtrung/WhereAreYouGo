<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="MyMaterialTheme" parent="MyMaterialTheme.Base" />

  <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="CustomActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/MyActionBar</item>
    <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
    <item name="android:actionMenuTextColor">@color/colorActionBarText</item>

    <!-- Support library compatibility -->
    <item name="actionBarStyle">@style/MyActionBar</item>
    <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
    <item name="actionMenuTextColor">@color/colorActionBarText</item>
  </style>


  <!-- ActionBar styles -->
  <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@color/colorPrimary</item>
    <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

    <!-- Support library compatibility -->
    <item name="background">@color/colorPrimary</item>
    <item name="titleTextStyle">@style/MyActionBarTitleText</item>
  </style>


  <!-- ActionBar tabs text -->
  <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
    <item name="android:textColor">@color/colorActionBarText</item>
  </style>


  <!-- ActionBar title text -->
  <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@color/colorActionBarText</item>
  </style>


  <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <!-- Text App Name -->

  <style name="TextAppName">
    <item name="android:textColor">#FCFCFC</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">36sp</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <!-- Edit Text -->
  <style name="EditText">
    <item name="met_textColor">@color/colorPrimaryText</item>
    <item name="met_textColorHint">@color/colorSecondaryText</item>
    <item name="met_underlineColor">@color/colorAccent</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="EditTextLogins" parent="EditText">
    <item name="met_textColor">#FCFCFC</item>
    <item name="met_underlineColor">@color/colorAccent</item>
  </style>

  <style name="EditTextSignup" parent="EditTextLogins">

  </style>

  <style name="EditTextSearch">
    <item name="android:textColor">@color/colorPrimaryText</item>
    <item name="android:textColorHint">@color/colorSecondaryText</item>
    <item name="android:textSize">14sp</item>
    <item name="android:background">@drawable/background_text_search</item>

  </style>

  <!-- Button -->
  <style name="Button">
    <item name="buttonMode">regular</item>
    <item name="roundedCorners">true</item>
    <item name="bootstrapBrand">info</item>
  </style>

  <style name="ButtonLogin" parent="Button">
    <item name="android:width">100dp</item>
  </style>

  <style name="ButtonSignup" parent="ButtonLogin">

  </style>

  <style name="FloatingActionButton">
    <item name="fab_colorPressed">@color/color_pressed</item>
    <item name="fab_colorRipple">@color/color_ripple</item>
    <item name="fab_shadowRadius">4dp</item>
    <item name="fab_shadowXOffset">1dp</item>
    <item name="fab_shadowYOffset">3dp</item>
    <item name="fab_showAnimation">@anim/fab_scale_up</item>
    <item name="fab_showShadow">true</item>
    <item name="fab_hideAnimation">@anim/fab_scale_down</item>

  </style>

  <!-- Checkbox -->
  <style name="CheckBox">
    <item name="android:textColor">#FCFCFC</item>
    <item name="android:textSize">12sp</item>
  </style>

  <!-- Text View -->
  <style name="TextView">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/colorPrimaryText</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
    <item name="android:scrollHorizontally">true</item>
  </style>

  <style name="TextCheckBox">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">#FCFCFC</item>
  </style>

  <style name="TitleDialog">
    <item name="android:textColor">#FCFCFC</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="TextVenueAddress">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/colorSecondaryText</item>
  </style>

  <style name="TextVenueDistance">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">#FCFCFC</item>
    <item name="android:background">@drawable/background_venue_distance</item>
  </style>

  <style name="TextLabel">
    <item name="android:textColor">@color/colorSecondaryText</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="TextVenueName" parent="TextView">
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/colorPrimaryText</item>

  </style>

  <style name="TitleActionBar">
    <item name="android:textColor">#FCFCFC</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TextActionCall">
    <item name="android:textAllCaps">true</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="TextActionFind" parent="TextActionCall">
    <item name="android:textColor">#03A9F4</item>
  </style>

  <style name="TextActionSave" parent="TextActionCall">
    <item name="android:textColor">#FF9800</item>
  </style>

  <!--Divider View -->
  <style name="MyDivider">
    <item name="android:background">@color/color_divider</item>

  </style>



</resources>
